<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.usuario">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:fontFamily="@font/bebas_egular"
            android:layout_marginTop="60dp"
            android:text="Inicio"
            android:textSize="60sp">


        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="25sp"
            android:fontFamily="@font/bebas_egular"
            android:layout_marginTop="5dp"
            android:text="Bienvenido @"
            android:textSize="30sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal">

        <Button
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/btn_color"
            android:text="Calendario"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:drawableLeft="@drawable/baseline_calendar"
            android:id="@+id/tv_go_to_reserve"/>
        <Button
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/btn_color"
            android:layout_marginTop="30dp"
            android:text="Mis Reservas"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:drawableLeft="@drawable/pageview"
            android:id="@+id/btn_mis_reservas"/>
        <Button
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/btn_color"
            android:text="Cerrar session"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:drawableLeft="@drawable/logout"
            android:id="@+id/tv_go_to_exit"/>




    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

